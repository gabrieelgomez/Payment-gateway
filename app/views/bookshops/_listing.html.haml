%tr{ id: "row-#{bookshop.id}" }
	- if can? :destroy_multiple, Bookshop
		%td.item-check{style:"width: 10%"}
			= link_to "", bookshop_path(bookshop), remote: true, class: "show-row"
			%input{ type:"checkbox", class: "filled-in", id: "checkbox-#{bookshop.id}", 'checklist-model'=>"check", 'checklist-value'=>"#{bookshop.id}", "ng-click"=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{bookshop.id}" }

		%td{style:"width: 30%"}
			= link_to "", bookshop_path(bookshop, search: @query), remote: true, class: "show-row"
			%span
				= bookshop.name
		%td{style:"width: 30%"}
			= link_to "", bookshop_path(bookshop, search: @query), remote: true, class: "show-row"
			%span
				= bookshop.place
		%td{style:"width: 30%"}
			= link_to "", bookshop_path(bookshop, search: @query), remote: true, class: "show-row"
			%span
				= bookshop.attendat

		%td{style:"width: 30%"}
			= link_to "", bookshop_path(bookshop, search: @query), remote: true, class: "show-row"
			%span
				= bookshop.email

	%td{style:"width: 5%"}
		= link_to bookshop_path(bookshop), class: "btn-floating waves-effect btn-flat" do
			= material_icon.md_24.more_horiz.css_class("md-dark")
