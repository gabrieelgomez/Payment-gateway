= title "Bookshops | #{@bookshop.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Bookshop
				= link_to bookshop_path(@bookshop), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Bookshop
				= link_to edit_bookshop_path(@bookshop), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to bookshops_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			.card-content
				%table.bordered
					%thead
						%tr
							%th Librería
					%tbody
						%tr
							%th
								.display-label Nombre
							%td
								.display-value.fs-body-1.tc-black-2= @bookshop.name.humanize
						%tr
							%th
								.display-label Lugar
							%td
								.display-value.fs-body-1.tc-black-2
									= @bookshop.place.humanize
									Bs.F
							-# %tr
							-# 	%th
							-# 		.display-label Persona a cargo
							-# 	%td
							-# 		-if @bookshop.description.blank?
							-# 			.display-value.fs-body-1.tc-black-2 -----
							-# 		-else
							-# 			.display-value.fs-body-1.tc-black-2= @bookshop.description
							%tr
								%th
									.display-label Persona a cargo
								%td
									.display-value.fs-body-1.tc-black-2
										= @bookshop.attendat
						%tr
							%th
								.display-label Teléfono
							%td
								.display-value.fs-body-1.tc-black-2
									= @bookshop.phone
						%tr
							%th
								.display-label Correo
							%td
								.display-value.fs-body-1.tc-black-2= @bookshop.email.humanize
						%tr
							%th
								.display-label Dirección
							%td
								.display-value.fs-body-1.tc-black-2= @bookshop.address.humanize
						%tr
							%center.color-title= @bookshop.name.humanize
							-# %center= image_tag @bookshop.banner, style: "max-width:100%;height: 200px;"

:scss
	.color-title{
		font-weight: 300;
		font-size: x-large;
		color: #c19342;
		letter-spacing: 6px;
		margin-bottom: 30px;
	}

	.color-subtitle{
		margin-bottom: 12px;
		font-style: oblique;
		font-size: larger;
		font-weight: 300;
	}
