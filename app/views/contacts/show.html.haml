= title "Contacts | #{@contact.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Contact
				= link_to contact_path(@contact), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")	
			- if can? :update, Contact
				= link_to edit_contact_path(@contact), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to contacts_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark") 
		.card			
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @contact.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.names")
					.display-value.fs-body-1.tc-black-2= @contact.names.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.company")
					.display-value.fs-body-1.tc-black-2= @contact.company.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.Estimated_Date")
					.display-value.fs-body-1.tc-black-2= @contact.Estimated_Date.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.Type_Meeting")
					.display-value.fs-body-1.tc-black-2= @contact.Type_Meeting.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.theme")
					.display-value.fs-body-1.tc-black-2= @contact.theme.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.Start_Time")
					.display-value.fs-body-1.tc-black-2= @contact.Start_Time.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.End_time")
					.display-value.fs-body-1.tc-black-2= @contact.End_time.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.city")
					.display-value.fs-body-1.tc-black-2= @contact.city.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.assistants")
					.display-value.fs-body-1.tc-black-2= @contact.assistants.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.phone")
					.display-value.fs-body-1.tc-black-2= @contact.phone.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.email")
					.display-value.fs-body-1.tc-black-2= @contact.email.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.message")
					.display-value.fs-body-1.tc-black-2= @contact.message.to_s.humanize
