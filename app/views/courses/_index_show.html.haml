.listing-show-header
	.actions
		- if can? :update, Course
			= link_to edit_category_course_path(@category_course, @course), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light")
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	%ul.list
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.id")
			.display-value= @course.id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.course_name")
			.display-value= @course.course_name
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.category_id")
			.display-value= @course.category_id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.description")
			.display-value= @course.description.html_safe
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.quota")
			.display-value= @course.quota
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.price")
			.display-value= @course.price_dolars
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.price")
			.display-value= @course.price_bs
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.banner")
			.display-value= image_tag @course.banner


:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});
