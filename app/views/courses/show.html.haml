= title "Courses | #{@course.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Course
				= link_to category_courses_path(@course), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Course
				= link_to edit_category_course_path(@category_course, @course), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to category_courses_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @course.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.course_name")
					.display-value.fs-body-1.tc-black-2= @course.course_name.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.category_id")
					.display-value.fs-body-1.tc-black-2= @course.category_id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.banner")
					.display-value.fs-body-1.tc-black-2= @course.banner.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.description")
					.display-value.fs-body-1.tc-black-2= @course.description.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.quota")
					.display-value.fs-body-1.tc-black-2= @course.quota.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.price")
					.display-value.fs-body-1.tc-black-2= @course.price_dolars.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.price")
					.display-value.fs-body-1.tc-black-2= @course.price_bs.to_s.humanize