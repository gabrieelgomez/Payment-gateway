.container-conferences
	%center
		%p.title-section CONFERENCIAS
		.btn.btn-primary.btn-lg#btn-i{:href => "#", :role => "button"} Conferencias Individuales
		.a.btn.btn-primary.btn-lg#btn-d{:href => "#", :role => "button"} Conferencias Duales
	.container-text
		%center
			.row.ghd.conferencias-i{style:"width: 100%; margin: 0px;"}
				- @attachments_conferencias_i.each do |imageconferencias|	
					.col-lg-4.col-md-6.col-sm-12.col-xs-12{style:"padding: 0px;"}
						.container-image
							%a{"data-target" => "#modal-#{imageconferencias.id}", "data-toggle" => "modal", :type => "button"}
								%img.portada{:src => "#{imageconferencias.image}"}
								.mask.hidden-xs{style:"cursor: pointer;"}
									

			- @attachments_conferencias_i.each do |imageconferencias|	
				.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1", id: "modal-#{imageconferencias.id}"}
					.modal-dialog.modal-md
						.modal-content
							%button.close.boton-modal{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button",} &times;
							%img.portada{:src => "#{imageconferencias.image_banner}"}
								%p{style:"padding: 10px;"}
								.modal-conferencia-description 
									#{imageconferencias.description.html_safe}

			.row.ghd.conferencias-d{style:"width: 100%; margin: 0px;"}
				- @attachments_conferencias_d.each do |imageconferencias_d|	
					.col-lg-4.col-md-6.col-sm-12.col-xs-12{style:"padding: 0px;"}
						.container-image
							%a{"data-target" => "#modal-#{imageconferencias_d.id}", "data-toggle" => "modal", :type => "button"}
								%img.portada{:src => "#{imageconferencias_d.image}"}
								.mask.hidden-xs{style:"cursor: pointer;"}
									

			- @attachments_conferencias_d.each do |imageconferencias_d|	
				.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1", id: "modal-#{imageconferencias_d.id}"}
					.modal-dialog.modal-md
						.modal-content
							%button.close.boton-modal{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button",} &times;
							%img.portada{:src => "#{imageconferencias_d.image_banner}"}
								%p{style:"padding: 10px;"} 
								.modal-conferencia-description 
									#{imageconferencias_d.description.html_safe}
		
.container-banner-inspiragrama
	.text
		%p SI DESEAS UN PROGRAMA DE INSPIRACIÓN INTEGRAL PARA TU EMPRESA EL “INSPIRAGRAMA” ES PARA TI
		= link_to "Ver más", "#", class: "btn-conferences hidden-xs", "data-target" => ".bs-example-modal-lg", "data-toggle" => "modal"

.modal.fade.bs-example-modal-lg{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
	.modal-dialog.modal-lg{style:"width: 1400px; z-index: 100;"}
		.modal-content
			.modal-base
				.row
					.col-lg-2{style:"left: 70px;"}
						%center
							%button.close.boton-inspi{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button",} &times;
							%p.title-modal INSPIRAGRAMA
							%p.text-modal Gustavo Henao ha inspirado y capacitado a decenas de empresas durante más de 8 años. En cada una de ellas descubrió que la “motivación” de los individuos que hacen vida dentro de la empresa está directamente relacionada con su ambiente familiar y seguridad emocional. De allí postuló la siguiente frase “Si tenemos familias solidas, lograremos empresas exitosas”. Dicho postulado se convirtió en el principio del “INSPIRAGRAMA” el cual es un diagrama de inspiración integral que busca mediante un ciclo de 4 conferencias tocar los pilares fundamentales de los trabajadores.

					.col-lg-10{style:"margin-top: 80px; left: 135px;"}
						
						
						
						%center
							.cuarto-circulo1
								.flecha1.glyphicon.glyphicon-share-alt
								.img
									.box-conferencia
										.text-conferencia
											Conferencias dirigidas a los trabajadores y sus esposas
											

							.cuarto-circulo2
								.flecha2.glyphicon.glyphicon-share-alt
								.img
									.box-conferencia
										.text-conferencia
											Conferencias dirigidas a los hijos de los trabajadores de la organización
											
							.cuarto-circulo3
								.flecha3.glyphicon.glyphicon-share-alt
								.img
									.box-conferencia
										.text-conferencia
											Conferencias dirigidas a los gerentes lideres de la organización
							.cuarto-circulo4
								.flecha4.glyphicon.glyphicon-share-alt
								.img
									.box-conferencia
										.text-conferencia
											Conferencias dirigidas a los trabajadores de la organización
											

:javascript

	$( window ).load(function() {
		$( ".conferencias-d" ).css( "overflow-y", "hidden");
		$( ".conferencias-d" ).css( "height", "0");
	});

	$("#btn-i").click(function(){
		$("#btn-d").removeClass('active');
		$("#btn-i").addClass('active');
		$( ".conferencias-i" ).show();
		$( ".conferencias-d" ).hide();
	});

	$("#btn-d").click(function() {
		$("#btn-i").removeClass('active');
		$("#btn-d").addClass('active');
		$( ".conferencias-d" ).css( "overflow-y", "");
		$( ".conferencias-d" ).css( "height", "");
		$( ".conferencias-d" ).show();
		$( ".conferencias-i" ).hide();
	});

	$(document).ready(function(){
		$('.ghd').slick({
			autoplay: false,
			dots: false,
			arrow: true,
			infinite: true,
			speed: 300,
			cssEase: 'linear',
			adaptiveHeight: false,
			slidesToScroll: 1,
			slidesToShow: 3,
			responsive: [
				{
					breakpoint: 1024,
					settings: {
						arrows: false,
						centerMode: true,
						centerPadding: '40px',
						slidesToShow: 2
					}
				},
				{
					breakpoint: 768,
					settings: {
						arrows: true,
						centerMode: true,
						centerPadding: '40px',
						slidesToShow: 1
					}
				},
				{
					breakpoint: 480,
					settings: {
						arrows: true,
						centerMode: false,
						adaptiveHeight: true,
						centerPadding: '40px',
						slidesToShow: 1
					}
				}
			]
		});
	});	


 