:scss
  body{
  font-family: 'Lato', sans-serif;
  background-color:#fff;
  }

  #section-book{

    .img-famouse{
      object-fit: cover;
      height: 232px;
      width: 232px;
      transform: scale(0.6);
      @media (min-width:425px) and (max-width:531px){
        height: 290px!important;
        width: 290px;
      }
    }

    @media (min-width:992px) and (max-width:2048px){
      .col-lg-3 {width: 20%;}
    }

    @media (min-width:768px) and (max-width:991px){
      .col-md-3 {width: 20%;}
    }

    // .col-md-3 {width: 20%;}
    // .col-sm-3 {width: 20%;}

    @media (max-width:1100px) and (min-width:768px){
      .img-responsive{
        margin-top: 0!important;
      }
      .quota{
        padding: 20px 100px!important;
      }
    }
    .mobile-t{
      @media (max-width:767px){
          margin-top: 70px;
      }
      @media (max-width:1100px) and (min-width:768px){

          margin-top: 50px;
      }
    }

    .comments-content{
      .padding-n{padding: 5px 49px;}
      width: 100%;
      height: 420px;
      background-color: #00a29b;
      margin-bottom:30px;
      @media (max-width: 767px){

        height: 1550px;
      }
      @media (max-width: 590px) and (min-width:400px){
        height: 1500px;

      }
      @media (max-width: 988px) and (min-width:768px){
        height: 400px;
        .text-rs{margin-top:-25px!important;}
        .padding-n{padding:0!important;}
        .img-circle{
          height: 120px!important;
        }
      }
      @media (max-width: 1200px) and (min-width:989px){
        height: 420px;
        .img-circle{
          height: 228px!important;
        }
      }
    }

    .text-banner{
      color: #FFF;
      text-align: center;
      font-size: 35px;
      padding: 20px 210px;
      margin-top: 25vh;
    }


    .center-d{
      height: 100%;
      text-align: center;
      justify-content: center;
      align-items: center;
    }

    .center-f {
      height: 100% !important;
      padding: 0 !important;
      margin: 0 !important;
      display: -webkit-box !important;
      display: -moz-box !important;
      display: -ms-flexbox !important;
      display: -webkit-flex !important;
      display: flex !important;
      align-items: center !important;
      justify-content: center !important;
    }

    .content-cover{
      background-image: url('https://trello-attachments.s3.amazonaws.com/569453ae24f9f3b8552ad817/59d638d80fde119361638074/e538015163729d3fa227b60b48f9992a/banner-henao.png');
      margin: 0 !important;
      padding: 0 !important;
      width: 100% !important;
      height: 100vh;
      background-size: cover;
      /* background-repeat: no-repeat; */
      background-position: center;
      @media (max-width:767px){
        height: 237px;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
      }
    }

    .text-center{
      p{
        margin: 2px 5px 2px;
      }
    }

  .separator{
    width: 1px;
    height: 140px;
    margin-top: 18px;
    background-color: #D7D7D7;
    transform: translateX(8px);
  }

  .quota{
    padding:20px 315px;font-size: 19px;opacity:0.7;
    @media (max-width: 767px){
      padding:20px 20px;
    }
  }

  .description-book{
    padding:50px 80px;font-size: 19px;opacity:0.7;
    @media (max-width:767px){
      padding: 10px 34px;
      text-align: justify;
    }
  }

  .text-t{
    font-style: italic;
    color: #635d5d;
    font-size: 15px;
  }

  .text-name{
    color: #635d5d;
    margin-bottom: 10px;
    font-weight: 800;
    font-size: 10px;
  }

  .text-cicatrices{
    margin-top: 4vh;
    color: #00a29b;
    margin-bottom: 4vh;
    font-size: 21px;
    font-weight: 900;
  }

  .title-book{
    font-size: 26px;
    color: #00a29b!important;
    letter-spacing: 4px;
    color: dimgrey;
    // font-family: "Lato", sans-serif;
    // line-height: 35px;
  }

  .body-book{
    text-align: justify;
    line-height: 27px;
  }

