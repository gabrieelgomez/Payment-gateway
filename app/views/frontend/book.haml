:scss
  body{
  font-family: 'Lato', sans-serif;
  background-color:#fff;
  }

  #section-book{

    .mobile-t{
      @media (max-width:767px){
          margin-top: 70px;
      }
    }

    .comments-content{
      width: 100%;
      height: 470px;
      background-color: #00a29b;
      @media (max-width: 767px){
