    .row
      .col-lg-3.col-md-3.col-sm-12.col-xs-12.col-md-12
        %img.img-circle{:src => "http://enbogam.com/wp-content/uploads/2015/04/barbara-palacios.jpg", :style => "transform: scale(0.6);"}/
        .text-center{style: "margin-top: -59px;"}
          %h3 Bárbara Palacios
          %h4 Miss Universo, empresaria y conferencista

      .col-lg-3.col-md-3.col-sm-12.col-xs-12.col-md-12
