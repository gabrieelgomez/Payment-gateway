			%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			
			= link_to main_app.root_path do
				= image_tag "frontend/LogoGustavoHenao-01.png", width: "130px", style: "margin-top:10px;margin-bottom: 10px;margin-right:20px; padding-left: 10px;" , class: "pull-left hidden-lg hidden-md hidden-sm"
