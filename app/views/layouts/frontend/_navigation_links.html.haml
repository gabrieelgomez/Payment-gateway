-if action_name == "index" and controller_name != "blog"
	%li= link_to '<div class="icon1" data-placement="bottom" title= "Home"></div>'.html_safe, "#home"
	%li= link_to '<div class="icon2" data-placement="bottom" title= "Nosotros"></div>'.html_safe, "#about"
	%li= link_to '<div class="icon4" data-placement="bottom" title= "Ventajas"></div>'.html_safe, "#ventajas"
	%li= link_to '<div class="icon3" data-placement="bottom" title= "Conferencias"></div>'.html_safe, "#conferences"
	%li= link_to '<div class="icon6" data-placement="bottom" title= "Galeria"></div>'.html_safe, "/gallery/imagenes", class: "external"	
	%li= link_to '<div class="icon5" data-placement="bottom" title= "Blog"></div>'.html_safe, "/blog", class: "external"
	%li= link_to '<div class="icon7" data-placement="bottom" title= "Contacto"></div>'.html_safe, "#contacs"

- else
	%li= link_to '<div class="icon1" data-placement="bottom" title= "Home"></div>'.html_safe, main_app.root_path(anchor: "home"), class: "external"
	%li= link_to '<div class="icon2" data-placement="bottom" title= "Nosotros"></div>'.html_safe, main_app.root_path(anchor: "about"), class: "external"
	%li= link_to '<div class="icon4" data-placement="bottom" title= "Ventajas"></div>'.html_safe, main_app.root_path(anchor: "ventajas"), class: "external"
	%li= link_to '<div class="icon3" data-placement="bottom" title= "Conferencias"></div>'.html_safe, main_app.root_path(anchor: "conferences"), class: "external"
	%li{ class: "#{'current' if action_name == 'gallery'}" }
		= link_to '<div class="icon6" data-placement="bottom" title= "Galeria"></div>'.html_safe, "/gallery/imagenes", class: "external"

	%li{ class: "#{'current' if controller_name == 'blog'}" }
		= link_to '<div class="icon5" data-placement="bottom" title= "Blog"></div>'.html_safe, "/blog", class: "external"
		
	%li= link_to '<div class="icon7" data-placement="bottom" title= "Contacto"></div>'.html_safe, main_app.root_path(anchor: "contacs"), class: "external"
