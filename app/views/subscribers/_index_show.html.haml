.listing-show-header
	.actions
		- if can? :update, Subscriber
			= link_to edit_subscriber_path(@subscriber), class: "btn-floating waves-effect waves-light btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
				= material_icon.md_24.create
	%h5
		= material_icon.md_24.account_circle.css_class("md-light") 
		= t("model.singular.#{controller_name.singularize}")
.listing-show-body.card{ resize: true , style: "height: {{windowHeight}}px;" }
	%ul.list
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.id")
			.display-value= @subscriber.id
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.name")
			.display-value= @subscriber.name
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.lastname")
			.display-value= @subscriber.lastname
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.email")
			.display-value= @subscriber.email
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.phone_one")
			.display-value= @subscriber.phone_one
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.phone_two")
			.display-value= @subscriber.phone_two
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.address")
			.display-value= @subscriber.address
		%li.list-row
			.display-label= t("model.#{controller_name.singularize}.attributes.course_id")
			.display-value= @subscriber.course_id
	

:javascript
	$(".modal-trigger").leanModal();
	$('.tooltipped').tooltip({delay: 1});
