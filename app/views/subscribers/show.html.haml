= title "Subscribers | #{@subscriber.id}"
.wrapper
	.wrapper-body.container
		.actions
			- if can? :delete, Subscriber
				= link_to category_course_subscriber_path(params[:category_id],params[:course_id],@subscriber.id), class: "btn-floating btn-flat right tooltipped", "data-position" => "bottom", "data-tooltip" => "Eliminar", method: :delete, data: { confirm: 'Are you sure?' } do
					= material_icon.md_18.delete.css_class("md-dark")
			- if can? :update, Subscriber
				= link_to edit_category_course_subscriber_path(params[:category_id],params[:course_id],@subscriber.id), class: "right btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Editar" do
					= material_icon.md_18.create.css_class("md-dark")
			= link_to category_course_subscribers_path, class: "btn-floating btn-flat tooltipped", "data-position" => "bottom", "data-tooltip" => "Volver" do
				= material_icon.md_18.arrow_back.css_class("md-dark")
		.card
			%ul.list
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.id")
					.display-value.fs-body-1.tc-black-2= @subscriber.id.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.name")
					.display-value.fs-body-1.tc-black-2= @subscriber.name.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.lastname")
					.display-value.fs-body-1.tc-black-2= @subscriber.lastname.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.email")
					.display-value.fs-body-1.tc-black-2= @subscriber.email.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.phone_one")
					.display-value.fs-body-1.tc-black-2= @subscriber.phone_one.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.phone_two")
					.display-value.fs-body-1.tc-black-2= @subscriber.phone_two.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.address")
					.display-value.fs-body-1.tc-black-2= @subscriber.address.to_s.humanize
				%li.list-row
					.display-label= t("model.#{controller_name.singularize}.attributes.course_id")
					.display-value.fs-body-1.tc-black-2= @subscriber.course_id.to_s.humanize
